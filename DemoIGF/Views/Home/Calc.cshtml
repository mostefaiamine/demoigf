@model DemoIGF.MissionInfo
<div class="row">
    <div class="col-12">
        <h1>Calcul de frais de mission</h1>
    </div>
</div>
<div class="row">
    @if (TempData.ContainsKey("montant"))
    {
    <div class="col-12">
        <div class="alert alert-success" role="alert" id="alert-message">
           Frais de mission : <span id="frais-result">@TempData["montant"]</span>
        </div>
    </div>
    }
    <div class="col-12">
        <form asp-controller="Home" asp-action="Calc" method="post">
            <div class="form-group row">
                <label asp-for="Commentaires" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input id="txtCommentaires" asp-for="Commentaires" class="form-control" placeholder="Commentaires">
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Grade" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <select id="cbGrade" asp-for="Grade" class="custom-select mr-sm-2"
                            asp-items='DemoIGF.MissionData.Grades'></select>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Jours" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input id="txtJours" asp-for="Jours" class="form-control" placeholder="Jours" value="1">
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary" id="btnCalc">Calculer</button>
                </div>
            </div>

        </form>
    </div>
</div>